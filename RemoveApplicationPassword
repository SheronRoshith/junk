openapi: 3.0.0
info:
  title: Remove Application Password
  description: Removes a password credential from an Azure AD application using its keyId
  version: 1.0.0
servers:
  - url: https://graph.microsoft.com
    description: Microsoft Graph API
paths:
  /v1.0/applications/{applicationObjectId}/removePassword:
    post:
      summary: Remove application password credential
      description: Removes a specific password credential identified by keyId from an application object
      operationId: removeApplicationPassword
      parameters:
        - name: applicationObjectId
          in: path
          required: true
          description: The object ID of the application (not the clientId/appId)
          schema:
            type: string
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              required:
                - keyId
              properties:
                keyId:
                  type: string
                  format: uuid
                  description: The unique identifier (GUID) of the password credential to remove
      responses:
        '204':
          description: Password credential successfully removed
        '400':
          description: Bad request - invalid keyId format
        '404':
          description: Application or password credential not found
